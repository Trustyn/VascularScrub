<%= form_for @ue_venous_form do |f| %>
<h1>UE Venous Form</h1>
    <%= fields_for :form do |ff| %>
    <%= ff.label "Technologist" %> <br/>
    <%= ff.select :technologist_id, options_for_select(Technologist.all.map{|s|["#{s.firstname} #{s.lastname}", s.id]},
                                                   selected: @ue_venous_form.form.technologist_id),
                                                   class: "form-control" %> <br/>
    <%= ff.label "Age" %> <br/>
    <%= ff.number_field :age_id %> <br/>
    <%= ff.label "Gender" %> <br/>
    <%= ff.select :gender_id, options_for_select(Gender.all.map{|s|[s.gender, s.id]},
                                                   selected: @ue_venous_form.form.gender),
                                                   class: "form-control" %> <br/>
    <%= ff.label "Blood Pressure Right" %> <br/>
    <%= ff.number_field :bpRight_id %> <br/>
    <%= ff.label "Blood Pressure Left" %> <br/>
    <%= ff.number_field :bpLeft_id %> <br/>
    <%= ff.label "Other History" %> <br/>
    <%= ff.text_field :history_id %> <br/>
    <%= ff.label "Other Symptoms" %> <br/><br/>
    <%= ff.text_field :symptoms_id %> <br/>
    
    <% end %>
    
    <%= f.label "Any recent evasive procedure?" %>
    <%= f.check_box :recentEvasiveProc, class: "form-control" %>
    <%= f.label "Any recent AV Fistula?" %>
    <%= f.check_box :recentAVFistula, class: "form-control" %>
    <%= f.label "Admitting Disease" %>
    <%= f.text_field :admittingDisease, class: "form-control" %>
    <%= f.label "Surgery" %>
    <%= f.check_box :surgery, class: "form-control" %>
    <%= f.label "Other Surgerys" %>
    <%= f.text_field :otherSurgery, class: "form-control" %>
    <%= f.label "Diabetes?" %>
    <%= f.check_box :diabetes, class: "form-control" %>
    <%= f.label "Myocardial Infarction?" %>
    <%= f.check_box :myocardialInf, class: "form-control" %>
    <%= f.label "Congenitive Heart Failure?" %>
    <%= f.check_box :conHeartFailure, class: "form-control" %>
    <%= f.label "Other History" %>
    <%= f.text_field :otherHistory, class: "form-control" %>
    <%= f.label "Any Pain?" %>
    <%= f.check_box :pain, class: "form-control" %>
    <%= f.label "Any Numbness" %>
    <%= f.check_box :numbness, class: "form-control" %>
<% end %>